theme = dracula

font-size = 10
confirm-close-surface = false

keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right
keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:up
keybind = alt+down=goto_split:down

keybind = alt+ctrl+h=new_split:left
keybind = alt+ctrl+l=new_split:right
keybind = alt+ctrl+k=new_split:up
keybind = alt+ctrl+j=new_split:down
keybind = alt+ctrl+left=new_split:left
keybind = alt+ctrl+right=new_split:right
keybind = alt+ctrl+up=new_split:up
keybind = alt+ctrl+down=new_split:down

keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+l=resize_split:right,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+left=resize_split:left,10
keybind = alt+shift+right=resize_split:right,10
keybind = alt+shift+up=resize_split:up,10
keybind = alt+shift+down=resize_split:down,10

keybind = alt+page_up=scroll_page_lines:-10
keybind = alt+page_down=scroll_page_lines:10

keybind = alt+n=new_window

# Prevent conflicts with hyprland, nvim
keybind = ctrl+shift+j=unbind
keybind = ctrl+shift+n=unbind
keybind = ctrl+shift+left=unbind
keybind = ctrl+shift+right=unbind
