	name = rbetzler
	email = rick.betzler@petalcard.com

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[alias]
    a = add
    ap = "add -p"
    b = branch
    bl = "branch -l"
    bd = "branch -D"
    b-current = "!git branch --no-color 2> /dev/null | sed -e '/^[^*]/d; s/^* //;'"
    b-exists =  "!f() { \
      git show-ref --verify --quiet refs/heads/$1; \
    }; f"
    b-primary = !bash ~/.git_aliases/get_primary_branch
    c = commit
    co = checkout
    cob = "checkout -b"
    cob-primary = !bash ~/.git_aliases/checkout_off_primary
    co-theirs = "co --theirs"
    cma = "commit --amend --no-edit"
    cma-message = "commit --amend"
    cmm = "commit -m"
    chpk = "cherry-pick"
    chpka = "chpk --abort"
    chpkc = "chpk --continue"
    df = diff
    dfc = "diff --cached"
    ft-upstream = !bash ~/.git_aliases/fetch_upstream
    l = log
    l-feat-commits = !bash ~/.git_aliases/log_feature_commits
    l-feat-hashs = !bash ~/.git_aliases/log_feature_commits 0
    p = push
    pf = "push -f"
    pfl = "push --force-with-lease"
    psu = !bash ~/.git_aliases/push_set_upstream
    pl = pull
    rb = rebase
    rba = "rb --abort"
    rbc = "rb --continue"
    rbi = "rb -i"
    rbih = "!f() { \
      git rbi HEAD~\"$1\"; \
    }; f"
    rb-primary = !bash ~/.git_aliases/rebase_off_primary
    rset = reset
    rset-head = "!f() { \
      git reset HEAD~\"$1\"; \
    }; f"
    rset-hard = "!f() { \
      git reset --hard origin/\"$1\"; \
    }; f"
    rset-current = "!f() { \
      git rset-hard $(git b-current); \
    }; f"
    rset-primary = "!f() { \
      git rset-hard $(git b-primary); \
    }; f"
    sh = show
    st = status
    sth = stash
    sth-a = "stash apply"
    sth-l = "stash list"
    sth-p = "stash pop"
